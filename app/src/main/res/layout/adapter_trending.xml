<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rowItemImageViewUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rowItemTvName"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rowItemTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/rowItemImageViewUser"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Malik Dawar" />

    <TextView
        android:id="@+id/rowItemTvLibName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/rowItemTvName"
        app:layout_constraintTop_toBottomOf="@id/rowItemTvName"
        tools:text="Drawroute" />

    <TextView
        android:id="@+id/tvItemDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/rowItemTvLibName"
        app:layout_constraintTop_toBottomOf="@id/rowItemTvLibName"
        tools:text="A lightweight path/route mapper for google maps backed by Kotlin Coroutines." />

    <TextView
        android:id="@+id/rowItemTvLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:drawableStartCompat="@drawable/ic_round_language_24"
        app:layout_constraintStart_toStartOf="@id/tvItemDetails"
        app:layout_constraintTop_toBottomOf="@id/tvItemDetails"
        tools:text="Kotlin" />

    <TextView
        android:id="@+id/rowItemTvStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:drawableStartCompat="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@id/rowItemTvLang"
        app:layout_constraintTop_toBottomOf="@id/tvItemDetails"
        tools:text="70" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rowItemTvLang" />
</androidx.constraintlayout.widget.ConstraintLayout>
